<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#21a5d1</item>
        <item name="colorPrimaryDark">#21a5d1</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="My_NoActionBar" parent="AppTheme.PopupOverlay">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#21a5d1</item>
        <item name="colorPrimaryDark">#21a5d1</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="squarecamera__CameraFullScreenTheme" parent="squarecamera__CameraFullScreenTheme.Base">

    </style>

    <style name="squarecamera__CameraFullScreenTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">#21a5d1</item>
        <item name="colorPrimaryDark">#21a5d1</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="squarecamera__CameraFullScreenTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="squarecamera__CameraFullScreenTheme.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />

    <style name="squarecamera__CameraFullScreenTheme.NoUI" parent="squarecamera__CameraFullScreenTheme.Base">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="My_toolbar">
        <item name="android:background">@drawable/gradient_default</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
